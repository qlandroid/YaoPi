<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shqtn.yaopi.ui.LoginActivity">

    <com.shqtn.yaopi.ui.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight"
        app:hideBackIcon="true"
        app:showRightIcon="false"
        app:title="PDA" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="请扫描条码登陆"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/text_view_label_big_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/activity_login_btn_scanning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/s_radius_button_bg"
        android:text="扫描" />

    <Button
        android:id="@+id/activity_login_btn_change_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/s_radius_button_bg"
        android:text="修改IP" />
</RelativeLayout>
