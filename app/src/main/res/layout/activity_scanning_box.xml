<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scanning_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shqtn.yaopi.ui.ScanningBoxActivity">

    <com.shqtn.yaopi.ui.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight"
        app:title="添加箱子" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shqtn.yaopi.ui.widget.LabelTextView
            android:id="@+id/activity_scanning_box_ltv_manifest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_div"
            app:labelText="单号" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.shqtn.yaopi.ui.widget.LabelTextView
            android:id="@+id/activity_scanning_box_ltv_box_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_div"
            app:labelText="箱数" />

        <com.shqtn.yaopi.ui.widget.LabelTextView
            android:id="@+id/activity_scanning_box_ltv_add_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_div"
            app:labelText="已扫描" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/activity_scanning_box_fl_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />

    <Button
        android:id="@+id/activity_scanning_box_btn_scanning"
        android:text="扫描"
        android:background="@android:drawable/btn_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
